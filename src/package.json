  "scripts": {
    "dev": "vite",
    "build": "tsup && npm run build:css",
    "build:css": "npx tailwindcss -i ./styles/globals.css -o ./dist/styles.css --minify",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "pack:test": "npm pack --dry-run",
    "verify": "node scripts/verify-components.js",
    "fix:imports": "node scripts/fix-imports.js",
    "audit:full": "npm run fix:imports && npm run verify && npm run build",
    "diagnostic": "node scripts/diagnostic-report.js"
